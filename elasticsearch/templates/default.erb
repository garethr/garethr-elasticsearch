# Run ElasticSearch as this user ID and group ID
ES_USER=<%= scope.lookupvar('elasticsearch::params::es_user') %>
ES_GROUP=<%= scope.lookupvar('elasticsearch::params::es_group') %>

# Heap Size (defaults to 256m min, 1g max)
ES_HEAP_SIZE=<%= scope.lookupvar('elasticsearch::params::es_heap_size') %>

# Heap new generation
ES_HEAP_NEWSIZE=<%= scope.lookupvar('elasticsearch::params::es_heap_newsize') %>

# max direct memory
#ES_DIRECT_SIZE=

# Maximum number of open files, defaults to 65535.
MAX_OPEN_FILES=<%= scope.lookupvar('elasticsearch::params::es_max_open_files') %>

# Maximum locked memory size. Set to "unlimited" if you use the
# bootstrap.mlockall option in elasticsearch.yml. You must also set
# ES_HEAP_SIZE.
MAX_LOCKED_MEMORY=unlimited

# ElasticSearch log directory
LOG_DIR=<%= scope.lookupvar('elasticsearch::params::log_dir') %>

# ElasticSearch data directory
DATA_DIR=<%= has_variable?('data_volumes') ? data_volumes.split(',').join('/elasticsearch,') + '/elasticsearch' : '/tmp/elasticsearch' %>

# ElasticSearch work directory
WORK_DIR=<%= scope.lookupvar('elasticsearch::params::work_dir') %>

# ElasticSearch configuration directory
CONF_DIR=<%= scope.lookupvar('elasticsearch::params::path_conf') %>

# ElasticSearch configuration file (elasticsearch.yml)
CONF_FILE=<%= scope.lookupvar('elasticsearch::params::path_conf') %>/elasticsearch.yml

# Additional Java OPTS
ES_JAVA_OPTS="<%= scope.lookupvar('elasticsearch::params::es_java_opts').join(' ') %>"
